	<% @messages.each do |message| %>
			<div class="form message">
			    <div class="iconMessage"><%= image_tag('http://i.imgur.com/7Dj58Qd.png') %></div>
					<% if message.read %>
                      <div class="bold">
                    <% else %>
                      <div>
                    <% end %>
					<p><%= message.message.body %></p>
				</div>

				<div>
					<span>- </span><%= message.message.sender.username %>
				</div>
			</div>
		<% end %>