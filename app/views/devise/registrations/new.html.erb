<div class="form">
  <p><%= image_tag("http://i.imgur.com/GQnJwSG.png?1") %></p>
  <p>SIGN UP AND BEGIN</p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
        <%= f.text_field :username, :placeholder => 'USERNAME', :class => 'inputText' %>
        <%= f.email_field :email, autofocus: true, :placeholder => 'EMAIL', :class => 'inputText' %>
        <%= f.password_field :password, autocomplete: "off", :placeholder => 'PASSWORD', :class => 'inputText' %>
        <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => 'PASSWORD CONFIRMATION', :class => 'inputText' %>
        <%= f.submit "SIGN UP", :class => 'inputSubmit' %>
    <% end %>
</div>
